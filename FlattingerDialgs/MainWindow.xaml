<Window x:Class="FlattingerDialgs.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlattingerDialgs"
        xmlns:theme="clr-namespace:Flattinger.Core.Theme;assembly=Flattinger.Core"
        xmlns:dialog="clr-namespace:Flattinger.UI.Dialogs.Controls;assembly=Flattinger.UI.Dialogs"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource ToastMessage.Background}">
    <Grid>
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" Content="Send" x:Name="Send" Click="Send_Click"/>
        <dialog:DialogContainer x:Name="dialogContainer"/>
    </Grid>
</Window>
